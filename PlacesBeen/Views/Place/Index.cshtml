@using PlacesBeen.Models;

<!DOCTYPE html>
<html lang="en-US">

<head>
  <meta charset='utf-8'>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <title>Place List</title>
</head>

<body>
  <div class="container">
    <h2>Place List:</h2>

    @if (Model.Count == 0)
    {
      <p>No cities visited yet...</p>

    }
    <ul>
      @foreach (Place place in Model)
      {
        <li>@place.CityName</li>
      }
    </ul>

    <a href="/place/new" class="btn btn-dark">Add a New City</a>
    <div>
    <form action="/place/delete" method="post">
      <button type="submit" name="button" class="btn btn-dark" style="margin-top: 8px;">Clear All Places</button>
    </form>
    </div>
  </div>
</body>

</html>